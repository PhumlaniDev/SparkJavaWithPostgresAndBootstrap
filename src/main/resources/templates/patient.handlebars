
<body>
<div class="container">
    <div class="row">
        <div class="col-6">
            <div class="col-6">
                <br>
                <h2>Upcoming: </h2>
                <br>
                <table class="table">
                    <thead>
                    <tr>
                        <th>Doctor</th>
<!--                        <th>Priority</th>-->
                        <th>Date</th>
                    </tr>
                    </thead>
                    {{#each people}}
                        <tr>
                            <td> Appointment with {{firstName}}</td>
<!--                            <td>{{priorityLevel}}</td>-->
                            <td> on {{date}}</td>
                        </tr>
                    {{/each}}
                </table>
            </div>

            <h2>Request Appointment</h2>
            <br>
            <form method="post" action="/patient_request">
                <div class="form-group">
                    <label for="exampleInputEmail1">Doctor's name</label>
                    <input type="text" class="form-control {{firstNameInvalid}}" name="docName" placeholder="eg Dr. Gumede">
                    <small id="emailHelp" class="form-text text-muted">What is you Doctor's name?

                </div>

                <div class="form-group">
                     <h2>Priority: </h2>
                    <div class="custom-control custom-radio">
                        <input type="radio" id="low" name="priorityLevel" value="low" class="custom-control-input">
                        <label class="custom-control-label" for="low">Low</label>
                    </div>
                    <div class="custom-control custom-radio">
                        <input type="radio" id="medium" name="priorityLevel" value="medium" class="custom-control-input">
                        <label class="custom-control-label" for="medium">Medium</label>
                    </div>
                    <div class="custom-control custom-radio">
                        <input type="radio" id="high" name="priorityLevel" value="high" class="custom-control-input">
                        <label class="custom-control-label" for="high">High</label>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>

    </div>

    <hr>
    <hr>

</div>
